<% if cookies[:language] == "esp" %>
  <%= form_tag search_path, method: :get, remote: true do %>
    <div id="search_fields">
      <%= text_field_tag :email, nil, placeholder: 'Email' %>
      <%= text_field_tag :text, nil, placeholder: "Escribe algo", autocomplete: "off" %>
      <%= button_tag "Buscar", data: { disable_with: "<i class='fa fa-circle-o-notch fa-spin'></i>"} %> 
    </div>
    <div id="categories">
      <p>Categorias</p>
      <% @categories.each do |category| %>
        <%= category %>          
        <%= check_box_tag :category, category %>
      <% end %>
    </div>  
  <% end %>
<% else %>
  <%= form_tag search_path, method: :get, remote: true do %>
    <div id="search_fields">
      <%= text_field_tag :email, nil, placeholder: 'Email' %>
      <%= text_field_tag :text, nil, placeholder: "Type something", autocomplete: "off" %>
      <%= button_tag "Search", data: { disable_with: "<i class='fa fa-circle-o-notch fa-spin'></i>"} %> 
    </div>
    <div id="categories">
      <p>Categories</p>
      <% @categories.each do |category| %>
        <%= category %>          
        <%= check_box_tag :category, category %>
      <% end %>
    </div>  
  <% end %>
<% end %>

