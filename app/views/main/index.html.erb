<%= form_tag search_path, method: :get, remote: true do %>
  <%= text_field_tag :email, nil, placeholder: 'Email' %>
  <%= text_field_tag :text, nil, placeholder: "Type something" %>
  <% @categories.each do |category| %>
      <%= category %>          
      <%= check_box_tag :category, category %>
    <% end %>
  <%= submit_tag "Search" %>
<% end %>

